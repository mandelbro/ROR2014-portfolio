
<div class="work-grid">
  <ul class="small-block-grid-2">
    <% @projects.each do |project| %>
    <li style="background-image: <%= project.lead_image %>">
      <div class="project" id="<%= dom_id(project) %>">
        <h3><%= link_to project.company, project %></h3>
        <p><%= project.technologies %></p>
        <div class="nav">
          <%= link_to 'Show', project %>
          <% if update? project %>
            | <%= link_to 'Edit', edit_project_path(project), class: 'button' %>
          <% end %>
          <% if destroy? project %>
            | <%= button_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button alert' %>
          <% end %>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<hr class="section-spacer">

<% if create? %>
<div class="row">
  <div class="columns">
    <%= link_to 'New Project', new_project_path, class: 'button medium' %>
  </div>
</div>
<% end %>
