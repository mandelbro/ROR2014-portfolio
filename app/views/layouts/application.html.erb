                <!--<li><i class="icon_divider  fi-asterisk size-12"></i></li>-->
                <!--<li><a href="contact.html">Contact</a></li>-->

              </ul><!-- /.right -->
            </section><!-- /.top-bar-section -->
          </nav> <!-- /.top-bar -->
        </div><!-- /.row -->
      </div><!-- /.bck -->
      <% if flash[:notice] %>
        <div class="row">
          <div class="columns notice">
            <div data-alert class="alert-box success radius">
              <%= flash[:notice] %>
              <a href="#" class="close">&times;</a>
            </div>
          </div>
        </div>
      <% end %>

      <hr class="section-spacer">

      <div class="main <%= (request.fullpath.parameterize.squish.size > 0 ? request.fullpath.parameterize.squish : 'home') %>">
        <%= yield %>
      </div>

