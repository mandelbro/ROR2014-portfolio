/* #Prices plan */
 #prices .plan {
  list-style: none;
  margin: 0 0 20px;
  text-align: center;
  background: #FFF;
  border: 0.1em solid #DDD;
  color: #8F8E8E;
}
#prices .plan li {
  padding: 5px 0;
  -webkit-transition: 300ms;
  -moz-transition: 300ms;
  -o-transition: 300ms;
  transition: 300ms;
}
#prices .plan li.plan-name {
  font-size: 24px;
  line-height: 24px;
}
#prices .plan li.plan-name h3 {
  margin: 0;
  color: #333;
}
#prices .plan li.plan-price {
  margin-bottom: 10px;
  color: white;
}
#prices .plan li.plan-price > div {
  display: inline-block;
  background-color: #333;
  border: 0.1em solid #DDD;
  padding: 0.5em;
  font-size: 1.4em;
  width: 4em;
  height: 4em;
}
#prices .plan li.plan-price > div sup {
  font-size: 10px;
  line-height: 10px;
}
#prices .plan li.plan-price > div > small {
  display: block;
  font-size: 11px;
}
#prices .plan li.plan-action {
  margin-top: 10px;
  border-top: 0;
}
#prices .plan.featured {
  background-color: #F56262;
  color: white;
}
#prices .button {
  border-color: #DDD;
  color: #777;
}


/* Windows  like explorer */
.window{
  position: relative;
  width:100%;
  padding-bottom: 75%;
  margin-bottom: 2em;
  height: 0;
  overflow: hidden;
  background: #F1F1F1;
  border-width: 1px;
  border-color: #E7E7E7;
  border-style:solid;
  border-radius: 3px;
  display: block;
}
.window-search{
  position: absolute;
  left: 0.5em;
  top: 0.5em;
  background: #FFFFFF;
  width: 70%;
  padding: 0.3em;
  border-width:1px;
  border-color: #E2E2E2;
  border-style:solid;
  color: #929292;
}
.window-buttons{
  position: absolute;
  top: 1em;
  right: 1em;
  width: 1em;
  height: 1em;
  background: #C0392B;
  -webkit-border-radius: 100%;
  border-radius: 100%;
  -webkit-box-shadow: -1.5em 0 #D35400,-3em 0 #16A085;
  -moz-box-shadow: -1.5em 0 #E29610,-3em 0 #5ACF18;
  box-shadow: -1.5em 0 #D35400,-3em 0 #16A085;
}
.window-body{
   margin-top: 4em;
}

@media (max-width: 480px) {
  .window-search{
  width: 60%;
  }
  .window-body{
  width: 100%;
  }
}

.widget {
  position: relative;
  padding-bottom: 75%;
  height: 0;
  overflow: hidden;
}
.widget iframe {
  position: absolute;
  top: 0;
  left: 0;
  border-color:#EBEBEB;
  border-width:0;
  border-style:solid;
  width: 100%;
  height: 100%;
}
.widget  .orbit-container .orbit-slides-container > * .orbit-caption {
  background-color: #F1F1F1;
  color: #777777;
}


