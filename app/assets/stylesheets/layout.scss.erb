/* #Global Styles
------------------------------------------- */


/* Body */
 body {
  padding: 0;
  margin: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  font-family: "helvetica neue", helvetica, arial, sans-serif;
  -webkit-text-size-adjust: 100%;
}

#page {
  min-height: 100%;
  min-width: 100%;
  position: relative;
}

.main {
  padding: 98px 0 145px;
}


/* Link */
 a {
  color: #f04124;
  -webkit-transition: 0.25s;
  transition: 0.25s;
}
a:hover {
  color: #ea2f10;
  text-decoration: underline;
}
a:focus {
  outline: none;
  outline: 0 auto -webkit-focus-ring-color;
  outline-offset: 0;
}


/* Selection */
 ::selection {
  background-color: #777;
  color: #fff;
  text-shadow: none;
}

/* = Scroll Webkit
------------------------*/
::-webkit-scrollbar{
  width:0.2em;
}
::-webkit-scrollbar-track{
  background-color:#bdc3c7;
}
::-webkit-scrollbar-thumb{
  background-color:#7f8c8d;
}

/* Sections */
.sections {
  padding-top: 3em;
  padding-bottom: 4em;
}

/* size of photo */
.size-small{
  width:5em;
}
.size-normal{
  width:10em;
}
.size-large{
  width:15em;
}



/* #Custom CSS Foundation 5.0.2
------------------------------------------- */
.row{
  max-width: 80em;
}

/* thumnail hover*/
.th:hover, .th:focus {
  -webkit-box-shadow: 0 0 6px 1px rgba(112, 109, 109, 0.5);
  box-shadow: 0 0 6px 1px rgba(112, 109, 109, 0.5);
}


/* Buttons */
button, .button {
  background-color: #FFF;
  border: 1px solid #000;
  color: #0C0C0C;
}
button:hover,
button:focus,
.button:hover,
.button:focus {
  background-color: #030303;
  text-decoration: none;
}
/* split button*/
.split.button span {
  border-left-color: #000;
}
.split.button span:before {
  border-color: #0A0A0A rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) rgba(0, 0, 0, 0);
}


/* Top bar */
.top-bar ,.top-bar-section ul ,
.top-bar-section ul li.active > a ,
.top-bar-section ul li.active > a:hover,
.top-bar-section li a:not(.button),
.top-bar-section li a:not(.button):hover ,
.top-bar.expanded .title-area{
  background: rgb(0,0,0);
  background: rgba(255, 255, 255, 0);
  text-transform: uppercase;
  font-weight: 900;
}

.top-bar .name h1 a {
  color:#333;
  font-family:"lato", cursive;
}
.top-bar-section ul li.active > a {
  color: #FFFFFF;
  font-family:"lato", cursive;
}

.top-bar-section>ul>.divider, .top-bar-section>ul>[role="separator"] {
  border-right: 1px solid #F1F1F1;
}
.top-bar-section li a:not(.button) {
  color: #E2E2E2;
}
.top-bar-section li a:not(.button):hover {
  color: #FFF;
  text-decoration: none;
}
.top-bar .toggle-topbar.menu-icon a {
  color: #FFF;
}
.top-bar .toggle-topbar.menu-icon a span {
  position: absolute;
  right: 0;
  display: block;
  width: 16px;
  height: 0;
  -webkit-box-shadow: 0 10px 0 1px #FFF, 0 16px 0 1px #FFF, 0 22px 0 1px #FFF;
  box-shadow: 0 10px 0 1px #FFF, 0 16px 0 1px #FFF, 0 22px 0 1px #FFF;
}
.top-bar-section .divider, .top-bar-section[role="separator"] {
  border-top: solid 1px #ddd;
}
.top-bar.expanded {
  background-color: #000;
  background-color: rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.2);
  height: auto;
}
.expanded > .top-bar-section ul li  a {
  background: rgba(255, 255, 255, 0.61);
  color: #777;
}
/* Orbit slider */
 .orbit-bullets {
  cursor: pointer;
}

/* panel */
.panel {
  border-style: solid;
  border-width: 1px;
  border-color: #EEE;
  margin-bottom: 1.25rem;
  padding: 1.25rem;
  background: #FCFCFC;
}

/* Blockqoute*/
blockquote{
  -moz-transition:all 0.5s linear;
  -webkit-transition:all 0.5s linear;
  transition:all 0.5s linear;
}
blockquote:hover {
  border-color: #E93B3B;
  background: #F5F5F5;
  color: #C9C9C9;
  -moz-transition:all 0.5s linear;
  -webkit-transition:all 0.5s linear;
  transition:all 0.5s linear;
}

/* Flex video*/
.flex-video.vimeo {
  padding-top: 0;
  border: 0.5em solid #F0F0F0;
}

/* light box */
.clearing-blackout {
  background: #FFF;
}
.clearing-close {
  color: #020202;
}
.clearing-assembled .clearing-container .visible-img {
  background: #FFF;
}

.clearing-assembled .clearing-container .carousel {
  background: #FFF;
}
.clearing-caption {
  color: #777;
  background: #FFF;
}
.clearing-main-next > span {
  border-color: rgba(0, 0, 0, 0);
  border-left-color: #000;
}
.clearing-main-prev > span {
  border-color: rgba(0, 0, 0, 0);
  border-right-color: #000;
}




/* `Header Styles
------------------------------------------- */
#header {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;

  .masthead {
    background: url("<%= asset_path 'header.jpg' %>") no-repeat center center fixed;
    padding-bottom: 1em;
    background-size: cover;
    position: relative;
    font-size: 1.5em;

    h1, h2, h3 {
      color: rgba(255, 255, 255, 1);
    }

    .columns {
      bottom: 0;
      display: table;
      left: 0;
      margin: auto;
      position: absolute;
      right: 0;
      top: 0;
    }
  }
  .bck{
    background: rgb(0, 0, 0);
    background: rgba(0, 0, 0, 0.22);
    position: relative;
    z-index: 99;
  }
  .this_is_home{
    padding-bottom: 10em;
  }
  .divider {
    color: #777;
    text-align: center;
  }
  .info_box {
    text-align: center;
  }
  .recentwork_box {
    text-align: center;
    background-color: #F7F7F7;
  }
  .prefooter{
    text-align: center;
    padding: 50px 0;
  }
}

/* Footer */
.footer {
  position: absolute;
  background-color: #000000;
  color: #DDDDDD;
  text-align: center;
  padding: 1.875rem 0;
  bottom: 0px;
  width: 100%;
}
.footer p {
  margin: 0;
}

/* To Top footer button */
.footer .toTop {
  position: absolute;
  cursor: pointer;
  left: 50%;
  right: 50%;
  margin-left: -32px;
  background: #000;
  width: 32px;
  height: 32px;
  top: -15px;
  color: #FFF;
  line-height: 32px;
  -webkit-border-radius: 1em 1em 0 0;
  border-radius: 1em 1em 0 0;
}

.footer .toTop:hover {
  color: #797979;
}



/* Share icons */
.share_icons {
  text-align: center;
  margin-top: 2em;
}
.share_icons ul {
  list-style: none;
  margin: 0;
}
.share_icons ul li {
  display: inline-block;
  margin-left: 1em;
}
.share_icons ul li a {
  border: 0.2em solid #ECECEC;
  background: #F8F8F8;
  color: #333333;
  display: block;
  margin: 0 auto;
  padding: 0;
  width: 3em;
  height: 3em;
  line-height: 2.7em;
  text-align: center;
  -webkit-transition: background 0.8s ease, color 0.5s linear;
  -moz-transition: background 0.8s ease, color 0.5s linear;
  transition: background 0.8s ease, color 0.5s linear;
}
.share_icons ul li a:hover {
  border-color: #FFFFFF;
  background: rgb(224, 224, 224);
  background: rgba(224, 224, 224, 0.25);
  -webkit-transition: background 0.8s ease, color 0.5s linear;
  -moz-transition: background 0.8s ease, color 0.5s linear;
  transition: background 0.8s ease, color 0.5s linear;
}
/* Share icons colors */
.fi-social-facebook {
  color: #0070FF;
}
.fi-social-twitter {
  color: #00B8FF;
}
.fi-social-youtube {
  color: #D53838;
}
.fi-social-instagram {
  color: #FA8200;
}

/* icon divider */
 .icon_divider {
  color: #FFFFFF;
  margin: 0.25em 0.5em 0.25em 0.5em;
  line-height: 4em;
}
/* logo */
.logo,.info_text{
  font-family: "lato",cursive;
  font-weight: bold;
  letter-spacing: 0.05em;
  text-align: center;
}
.logo:hover{
  text-decoration: none;
}

/* info */
.info {
  margin-top: 5em;
}
.info_text {
  color: #000000;
  font-size: 10em;
  text-shadow: 4px 4px 0px #D5D5D5, 7px 7px 0px rgba(0, 0, 0, 0.2);
}

/* after header */
.after_header{
  background: #F7F7F7;
  color: #8D8D8D;
}
.after_header h2{
  color: #777777;
}
.after_header_col{
  margin: 0;
}
.after_header_icon {
  display: block;
  width: 7em;
  height: 7em;
  line-height: 5em;
  padding: 0.5em;
  background-color: #FFFFFF;
  border: 0.5em solid #E9E9E9;
  border-radius: 50%;
  margin: 0 auto 1.25rem;
  color: #777777;
}
.after_header  .breadcrumbs {
  padding: 1.3em 0 0 0;
  background-color: #F7F7F7;
  border-color: #F7F7F7;
}

.after_header  .breadcrumbs > * a,
.after_header   .breadcrumbs > * span {
  text-transform: uppercase;
  color: #0C0C0C;
}

/*  Icon animation */
.html5_ef{
  animation: html 5s ease  0.5s  infinite alternate none;
  -webkit-animation: html 5s ease  0.5s  infinite alternate none;
  -moz-animation: html 5s ease  0.5s  infinite alternate none;
}
.css3_ef{
  animation: css 5s ease  1s  infinite alternate none;
  -webkit-animation: css 5s ease  1s  infinite alternate none;
  -moz-animation: css 5s ease  1s  infinite alternate none;
}
.eye_ef{
  animation: eye 5s ease  1.2s  infinite alternate none;
  -webkit-animation: eye 5s ease  1.2s  infinite alternate none;
  -moz-animation: eye 5s ease  1.2s  infinite alternate none;
}


/* html5_ef */
@-webkit-keyframes html{50%{background-color: #3498db ;border: 0.5em solid #2980b9;color: #FFF;}}
@-moz-keyframes html{50%{background-color: #3498db ;border: 0.5em solid #2980b9;color: #FFF;}}
@keyframes html{50%{background-color: #3498db ;border: 0.5em solid #2980b9;color: #FFF;}}

/* css3_ef */
@-webkit-keyframes css{50%{background-color: #e74c3c;border: 0.5em solid #c0392b;color: #FFF;}}
@-moz-keyframes css{50%{background-color: #e74c3c;border: 0.5em solid #c0392b;color: #FFF;}}
@keyframes css{50%{background-color: #e74c3c;border: 0.5em solid #c0392b;color: #FFF;}}

/* eye_ef */
@-webkit-keyframes eye{50%{background-color: #F09712;border: 0.5em solid #FCB36F;color: #FFF;}}
@-moz-keyframes eye{50%{background-color: #F09712;border: 0.5em solid #FCB36F;color: #FFF;}}
@keyframes eye{50%{background-color: #F09712;border: 0.5em solid #FCB36F;color: #FFF;}}


/* show border */
.show_border{
