.masthead {
  background-size: cover;
  background: url("<%= asset_path 'header.jpg' %>") no-repeat center center fixed;
  font-size: 1.5em;
  height: 900px;
  position: relative;
  width: 100%;
  margin-top: -$topbar-height;

  h1, h2, h3 {
    color: rgba(255, 255, 255, 1);
  }

  .columns {
    bottom: 0;
    display: table;
    left: 0;
    margin: auto;
    position: absolute;
    right: 0;
    top: 0;
  }
}
