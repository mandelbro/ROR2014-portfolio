

.masthead {
  background: url("<%= asset_path 'header.jpg' %>") no-repeat center center fixed;
  padding-bottom: 1em;
  background-size: cover;
  position: relative;
  font-size: 1.5em;

  h1, h2, h3 {
    color: rgba(255, 255, 255, 1);
  }

  .columns {
    bottom: 0;
    display: table;
    left: 0;
    margin: auto;
    position: absolute;
    right: 0;
    top: 0;
  }
}
